<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/ic_background"
    android:windowSoftInputMode="adjustResize">



<TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добро пожаловать!"
        android:textSize="33dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выполните вход \n или зарегистрируйтесь."
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/welcome"
        android:layout_marginTop="51dp"
        />

    <TextView
        android:id="@+id/entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вход"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"/>



    <EditText
        android:id="@+id/emailEdit"
        android:layout_width="320dp"
        android:layout_height="47dp"
        android:layout_marginTop="60dp"
        android:hint="Введите вашу почту"
        android:inputType="textEmailAddress"
        android:padding="13dp"
        android:textSize="15dp"
        android:background="@drawable/rounded_edittext_background"
        android:textColorHint="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text1"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/white"/>

    <EditText
        android:id="@+id/passwordEdit"
        android:layout_width="320dp"
        android:layout_height="47dp"
        android:layout_marginTop="60dp"
        android:hint="Введите пароль"
        android:padding="13dp"
        android:background="@drawable/rounded_edittext_background"
        android:textColorHint="@color/gray"
        android:textSize="15dp"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/emailEdit"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/white"/>

    <Button
        android:id="@+id/entry_button"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/passwordEdit"
        android:text="Войти"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_entry_background"
        android:layout_marginTop="60dp"
        />
    <TextView
        android:id="@+id/forget_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Забыли пароль?"
        android:textSize="15dp"
        android:layout_marginEnd="105dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/entry_button"
        android:layout_marginTop="81dp"
        />
    <TextView
        android:id="@+id/forget_pass1"
        android:layout_width="wrap_content"
        android:layout_marginStart="115dp"
        android:layout_height="wrap_content"
        android:text="Нажми сюда"
        android:clickable="true"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/orange"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/entry_button"
        android:layout_marginTop="81dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>